<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="1080.0" prefWidth="1920.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller.RobotManagementController">
    <Label text="Create new Robot" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Name:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="nameCreateText" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Label text="Type:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="typeCreateText" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Label text="Icon:" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <TextField fx:id="iconCreateText" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Label text="Image" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <TextField fx:id="imageCreateText" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Label text="Connectivity" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <TextField fx:id="connectivityCreateText" GridPane.columnIndex="2" GridPane.rowIndex="5" />
    <Button onAction="#saveCreate" text="Save" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label fx:id="createError" GridPane.columnIndex="2" GridPane.rowIndex="7" />

    <Label text="Edit robot" GridPane.columnIndex="4" GridPane.rowIndex="0" />
    <Label text="Name:" GridPane.columnIndex="4" GridPane.rowIndex="1" />
    <TextField fx:id="nameEditText" GridPane.columnIndex="5" GridPane.rowIndex="1" />
    <Label text="Type:" GridPane.columnIndex="4" GridPane.rowIndex="2" />
    <TextField fx:id="typeEditText" GridPane.columnIndex="5" GridPane.rowIndex="2" />
    <Label text="Icon:" GridPane.columnIndex="4" GridPane.rowIndex="3" />
    <TextField fx:id="iconEditText" GridPane.columnIndex="5" GridPane.rowIndex="3" />
    <Label text="Image" GridPane.columnIndex="4" GridPane.rowIndex="4" />
    <TextField fx:id="imageEditText" GridPane.columnIndex="5" GridPane.rowIndex="4" />
    <Label text="Connectivity" GridPane.columnIndex="4" GridPane.rowIndex="5" />
    <TextField fx:id="connectivityEditText" GridPane.columnIndex="5" GridPane.rowIndex="5" />
    <Button onAction="#saveEdit" text="Save" GridPane.columnIndex="4" GridPane.rowIndex="6" />
    <Button onAction="#searchEdit" text="Find robot" GridPane.columnIndex="5" GridPane.rowIndex="6" />
    <Label fx:id="editError" GridPane.columnIndex="4" GridPane.rowIndex="7" />

    <Label text="Delete robot" GridPane.columnIndex="7" GridPane.rowIndex="0" />
    <Label text="Name" GridPane.columnIndex="7" GridPane.rowIndex="1" />
    <TextField fx:id="nameDeleteText" GridPane.columnIndex="8" GridPane.rowIndex="1" />
    <Button onAction="#deleteRobot" text="Delete" GridPane.columnIndex="7" GridPane.rowIndex="2" />
    <Label fx:id="deleteError" GridPane.columnIndex="7" GridPane.rowIndex="3"/>

    <Button onAction="#goBack" text="Back" GridPane.columnIndex="4" GridPane.rowIndex="8"/>
</GridPane>