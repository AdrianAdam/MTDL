    <Label text="Username:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="usernameTextLogin" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="passwordTextLogin" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button onAction="#login" text="LOGIN" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Label text="Username:" GridPane.columnIndex="4" GridPane.rowIndex="1" />
    <TextField fx:id="usernameTextRegister" GridPane.columnIndex="5" GridPane.rowIndex="1" />
    <Label text="Password:" GridPane.columnIndex="4" GridPane.rowIndex="2" />
    <TextField fx:id="passwordRegister" GridPane.columnIndex="5" GridPane.rowIndex="2" />
    <Label text="Email:" GridPane.columnIndex="4" GridPane.rowIndex="3" />
    <TextField fx:id="emailRegister" GridPane.columnIndex="5" GridPane.rowIndex="3" />
    <Button onAction="#register" text="REGISTER" GridPane.columnIndex="5" GridPane.rowIndex="4" />
</GridPane>
